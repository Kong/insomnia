{
  "name": "insomnia",
  "private": true,
  "version": "1.0.0",
  "description": "Insomnia App",
  "main": "electron.js",
  "licence": "GNU AGPLv3",
  "homepage": "http://insomnia.rest",
  "repository": {
    "type": "git",
    "url": "https://github.com/gschier/insomnia"
  },
  "scripts": {
    "start-hot": "cross-env HOT=1 INSOMNIA_ENV=development electron -r babel-register ./app/app.js",
    "hot-server": "babel-node ./webpack/server.js",
    "dev": "concurrently --kill-others \"npm run hot-server\" \"npm run start-hot\"",
    "build": "bash scripts/build.sh",
    "package": "rm -rf dist && npm run package-mac && npm run package-win && npm run package-linux",
    "package-mac": "rm -rf dist/mac && node node_modules/electron-builder/out/build-cli.js --publish=never --x64 --mac",
    "package-win": "rm -rf dist/win* && node node_modules/electron-builder/out/build-cli.js --publish=never --x64 --win",
    "package-linux": "rm -rf dist/linux && rm -f dist/*.AppImage && rm -f dist/*.deb && node node_modules/electron-builder/out/build-cli.js --publish=never --x64 --linux",
    "build-n-package": "npm run build && npm run package",
    "build-n-package-win": "npm run build && npm run package-win",
    "build-n-package-mac": "npm run build && npm run package-mac",
    "build-n-package-linux": "npm run build && npm run package-linux",
    "release": "npm run package && bash scripts/sentry-release.sh"
  },
  "build": {
    "appId": "com.insomnia.app",
    "category": "public.app-category.developer-tools",
    "compression": "normal",
    "win": {
      "iconUrl": "https://trello-logos.s3.amazonaws.com/06507f4661a7bb6375a8cf5beeaa48be/170.png",
      "icon": "build/icon.ico",
      "loadingGif": "build/install-spinner.gif",
      "remoteReleases": "https://s3.amazonaws.com/builds-insomnia-rest/win",
      "msi": false
    },
    "linux": {
      "synopsis": "",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "directories": {
    "app": "build",
    "output": "dist"
  },
  "dependencies": {
    "analytics-node": "^2.1.0",
    "classnames": "^2.2.3",
    "codemirror": "~5.16.0",
    "electron-context-menu": "^0.4.0",
    "electron-squirrel-startup": "^1.0.0",
    "httpsnippet": "git@github.com:gschier/httpsnippet.git#39d2fb0449f33711e5cc71a4d42b0e5b808426b4",
    "json-lint": "^0.1.0",
    "jsonschema": "^1.1.0",
    "mousetrap": "^1.6.0",
    "nedb": "^1.8.0",
    "node-localstorage": "^1.3.0",
    "nunjucks": "git@github.com:gschier/nunjucks.git#80485468cd577f1a1a8067bedf6c5bfa878712ea",
    "raven": "^0.12.1",
    "react": "^15.3.1",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.1.0",
    "react-elm-components": "^1.0.0",
    "react-redux": "^4.4.1",
    "react-tabs": "^0.7.0",
    "redux": "^3.3.1",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.0.1",
    "request": "^2.74.0",
    "tough-cookie": "^2.3.1",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "concurrently": "^2.0.0",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "electron-builder": "^6.3.5",
    "electron-prebuilt": "~1.2.8",
    "elm": "^0.17.1",
    "elm-hot-loader": "^0.3.3",
    "elm-webpack-loader": "^3.0.3",
    "express": "latest",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "react-addons-perf": "^15.3.0",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "redux-mock-store": "^1.0.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "latest",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-target-electron-renderer": "^0.4.0"
  },
  "devEngines": {
    "node": "4.x || 5.x",
    "npm": "2.x || 3.x"
  }
}
