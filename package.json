{
  "name": "insomnia",
  "private": true,
  "version": "1.0.0",
  "description": "Insomnia App",
  "main": "main.js",
  "licence": "GNU AGPLv3",
  "homepage": "http://insomnia.rest",
  "repository": {
    "type": "git",
    "url": "https://github.com/gschier/insomnia"
  },
  "scripts": {
    "test:noisy": "jest",
    "test:coverage": "jest --coverage --silent && open ./coverage/lcov-report/index.html",
    "test:watch": "jest --silent --watch",
    "test": "jest --silent",
    "start-hot": "cross-env HOT=1 INSOMNIA_ENV=development electron -r babel-register ./app/main.development.js",
    "hot-server": "babel-node ./webpack/server.js",
    "dev": "concurrently --kill-others \"yarn run hot-server\" \"yarn run start-hot\"",
    "build:clean": "rm -rf ./build && rm -rf ./dist && mkdirp ./build",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.production.babel.js",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.electron.babel.js",
    "build:copy": "cp -r yarn.lock ./app/package.json ./app/static ./app/icons/* ./build/",
    "build:install": "cd build && yarn install",
    "build": "yarn run build:clean && yarn run build:renderer && yarn run build:main && yarn run build:copy && yarn run build:install",
    "package:mac": "rm -rf dist/mac && node node_modules/electron-builder/out/cli/build-cli.js --publish=never --x64 --mac",
    "package:win": "rm -rf dist/win* && node node_modules/electron-builder/out/cli/build-cli.js --publish=never --x64 --win",
    "package:linux": "rm -rf dist/linux && rm -f dist/*.AppImage && rm -f dist/*.deb && node node_modules/electron-builder/out/cli/build-cli.js --publish=never --x64 --linux",
    "package": "yarn test && rm -rf dist && yarn run package:mac && yarn run package:win && yarn run package:linux",
    "build-n-package": "yarn run build && yarn run package",
    "build-n-package:win": "yarn run build && yarn run package:win",
    "build-n-package:mac": "yarn run build && yarn run package:mac",
    "build-n-package:linux": "yarn run build && yarn run package:linux",
    "sentry": "bash scripts/sentry-release.sh"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties",
      "transform-regenerator",
      "transform-runtime",
      "add-module-exports"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "jest": {
    "setupFiles": [
      "./__jest__/setup.js"
    ],
    "rootDir": "app",
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/main.development.js",
      "!**/static/**",
      "!**/ui/**",
      "!**/__fixtures__/**",
      "!**/__tests__/**",
      "!**/__jest__/**",
      "!**/__mocks__/**",
      "!**/node_modules/**"
    ]
  },
  "build": {
    "appId": "com.insomnia.app",
    "category": "public.app-category.developer-tools",
    "compression": "normal",
    "win": {
      "iconUrl": "https://insomnia.rest/images/icon.png",
      "remoteReleases": "https://s3.amazonaws.com/downloads.insomnia.rest/win",
      "target": "squirrel",
      "msi": false
    },
    "linux": {
      "executableName": "insomnia",
      "synopsis": "A simple, beautiful, and free REST API client",
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "directories": {
    "app": "build",
    "output": "dist"
  },
  "dependencies": {
    "analytics-node": "~2.1.0",
    "classnames": "~2.2.5",
    "clone": "~2.1.0",
    "codemirror": "~5.24.2",
    "electron-context-menu": "~0.8.0",
    "electron-squirrel-startup": "~1.0.0",
    "hkdf": "0.0.2",
    "httpsnippet": "1.16.5",
    "insomnia-importers": "~1.3.0",
    "jsonlint": "~1.6.2",
    "jsonpath": "~0.2.11",
    "mime-types": "~2.1.14",
    "mkdirp": "~0.5.1",
    "nedb": "~1.8.0",
    "node-forge": "~0.7.0",
    "nunjucks": "~3.0.0",
    "raven": "~1.1.2",
    "react": "~15.4.2",
    "react-dnd": "~2.2.3",
    "react-dnd-html5-backend": "~2.2.3",
    "react-dom": "~15.4.2",
    "react-redux": "~5.0.3",
    "react-tabs": "~0.8.2",
    "redux": "~3.3.1",
    "redux-logger": "~2.6.1",
    "redux-thunk": "~2.0.1",
    "request": "~2.74.0",
    "reselect": "~2.5.4",
    "srp-js": "0.2.0",
    "tough-cookie": "~2.3.1",
    "uuid": "~3.0.0",
    "vkbeautify": "~0.99.1",
    "whatwg-fetch": "~2.0.1",
    "xmldom": "~0.1.22",
    "xpath": "~0.0.23"
  },
  "devDependencies": {
    "babel-cli": "~6.23.0",
    "babel-core": "~6.23.1",
    "babel-jest": "~19.0.0",
    "babel-loader": "~6.3.2",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-transform-class-properties": "~6.23.0",
    "babel-plugin-transform-object-rest-spread": "~6.23.0",
    "babel-plugin-transform-regenerator": "~6.22.0",
    "babel-plugin-transform-runtime": "~6.15.0",
    "babel-polyfill": "~6.23.0",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-react": "~6.23.0",
    "babel-preset-react-hmre": "~1.1.1",
    "concurrently": "~2.0.0",
    "cross-env": "~2.0.0",
    "css-loader": "~0.26.2",
    "electron": "~1.4.15",
    "electron-builder": "~10.17.3",
    "express": "~4.14.0",
    "file-loader": "~0.10.1",
    "jest": "~18.1.0",
    "jsbn": "~0.1.0",
    "less": "~2.7.2",
    "less-loader": "~2.2.3",
    "nock": "~9.0.2",
    "react-addons-perf": "~15.3.0",
    "react-addons-test-utils": "~15.1.0",
    "react-hot-loader": "~1.3.1",
    "redux-mock-store": "~1.0.2",
    "style-loader": "~0.13.2",
    "webpack": "~2.2.1",
    "webpack-dev-middleware": "~1.10.1",
    "webpack-dev-server": "~2.4.1",
    "webpack-hot-middleware": "~2.17.1",
    "webpack-target-electron-renderer": "~0.4.0"
  },
  "devEngines": {
    "node": "6.x",
    "npm": "2.x || 3.x"
  }
}
