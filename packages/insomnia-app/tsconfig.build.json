{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": [
    "app",
    "package.json",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__jest__",
    ".babelrc.js",
    "jest.config.js",
    "webpack",
    "scripts",
    "config",
    "bin",
    "assets",
    "**/@types/mocha/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__snapshots__/**",
    "**/__mocks__/*",
    "build"
  ]
}
