{
  "compilerOptions": {
    "types": ["vite/client"],
    "outDir": ".",
    "rootDir": ".",
    "strict": false,
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "app"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/@types/mocha",
    "**/__jest__",
    "**/__mocks__",
    "**/__snapshots__",
    "**/__tests__",
    "**/main.min.js",
    "__jest__",
    "assets",
    ".babelrc.js",
    "bin",
    "build",
    "config",
    "jest.config.js",
    "node_modules",
    "scripts"
  ]
}
