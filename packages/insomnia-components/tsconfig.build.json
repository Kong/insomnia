{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "isolatedModules": true,
    "lib": ["DOM"],
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/jest"
  ]
}
