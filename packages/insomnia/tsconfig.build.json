{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": ["node"],
  },
  "include": [
    "**/*.d.ts",
    "src",
    "**/insomnia.config.json",
    "package.json"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/@types/mocha",
    "**/__jest__",
    "**/__mocks__",
    "**/__snapshots__",
    "**/__tests__",
    "**/main.min.js",
    "src/coverage",
    "__jest__",
    "assets",
    "bin",
    "config",
    "jest.config.js",
    "node_modules",
  ]
}
